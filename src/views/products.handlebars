          <p style="text-align: start;">stock: {{stock}}</p> 
          <div style="width:100%; display:flex; justify-content:space-around"> 
       <!--   <p>{{category}}</p> -->
          <p style="color: #5DD300;text-align: start; font-size:25px; height:40px">${{price}}</p> 
          <button style="width: 40%; height:40px; background-color: #D94229; color:#FFFFFF; border:0px solid #000000; margin-top:15px" class="productbutton" id={{_id}}>COMPRAR</button>
          </div>
          
        </div>
       
      {{/each}}
      
    
       </div>
       </div>


