      <div class="global" style="display: flex ; flex-direction : row ; height : auto ; width : 100% ;justify-content:center; padding-bottom: 200px">
        <ul  style=" width:20%; margin : 0; margin-top:150px; display:flex; flex-direction:column; padding:0%; height:fit-content; overflow:auto; margin-left:5%; border:1px solid #B3B3B3;">
         <h1 style="margin: 0%; width:100%;background-color: #D94229; text-align:center;padding:10px; color : #FFFFFF">Categorias</h1>
          {{#each categorias}}
           <li style="list-style : none ;display:inline-block ;height:auto;padding:10px;padding-right:0%;width:auto;margin:0;border-bottom:1px solid #B3B3B3">
            <a style="text-decoration : none ; color:#000000; " href="/api/products?category={{this}}">{{this}}</a>
            </li>

           {{/each}}
             <h1   class="email" id={{email}}>Bienvenido! {{nombre}}, email :{{email}}</h1>
        </ul>
      
      
      <div style="width: 100%;">

      <div class="productscontainer" style="width: 95%;margin-top:155px;text-align:center;margin-left:20px;">
        <h1 style="width: 100%; background-color: #D94229; padding-bottom:13px; padding-top:10px;color:#FFFFFF">Productos</h1>
       <div id="products" style="display:grid; grid-template-columns:repeat(auto-fit,minmax(220px,1fr));grid-gap: 30px; width:100%; ">
       


       {{#each products}}
       
        <div id="product" style="height:fit-content;  background-color:#FFFFFF;border:1px solid #B3B3B3;">
          <img style="width: 200px; height:200px" src="/assets/lentejas.jpg">
        <!--  <h3 style="text-align: start;"  >{{title}}</h3> -->
